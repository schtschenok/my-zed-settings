{
    "features": {
        "edit_prediction_provider": "zed"
    },
    "theme": {
        "mode": "system",
        "dark": "JetBrains New Dark",
        "light": "Ayu Light"
    },
    "icon_theme": "Zed (Default)",
    "base_keymap": null,
    "buffer_font_family": "JetBrains Mono",
    "buffer_font_fallbacks": ["JetbrainsMono NerdFont", "Zed Plex Mono"],
    "buffer_font_features": {
        "calt": true
    },
    "buffer_font_size": 16,
    "buffer_font_weight": 400,
    "buffer_line_height": "comfortable",
    "ui_font_family": "JetBrains Mono",
    "ui_font_fallbacks": ["JetbrainsMono NerdFont", "Zed Plex Mono"],
    "ui_font_features": {
        "calt": false
    },
    "ui_font_weight": 400,
    "ui_font_size": 16,
    "unnecessary_code_fade": 0.3,
    "multi_cursor_modifier": "cmd_or_ctrl",
    "hover_popover_delay": 250,
    "cursor_blink": false,
    "show_wrap_guides": false,
    "always_treat_brackets_as_autoclosed": false,
    "show_edit_predictions": false,
    "scrollbar": {
        "show": "always",
        "axes": {
            "horizontal": false,
            "vertical": true
        }
    },
    "scroll_beyond_last_line": "vertical_scroll_margin",
    "vertical_scroll_margin": 3,
    "scroll_sensitivity": 1.0,
    "seed_search_query_from_cursor": "selection",
    "project_panel": {
        "button": true,
        "default_width": 320
    },
    "outline_panel": {
        "button": true,
        "default_width": 320
    },
    "collaboration_panel": {
        "button": false,
        "default_width": 320
    },
    "chat_panel": {
        "default_width": 320
    },
    "git_panel": {
        "default_width": 320
    },
    "notification_panel": {
        "button": false,
        "default_width": 320
    },
    "assistant": {
        "version": "2",
        "default_width": 480,
        "default_height": 320,
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-7-sonnet-latest"
        }
    },
    "enable_language_server": true,
    "autosave": { "after_delay": { "milliseconds": 500 } },
    "format_on_save": "on",
    "formatter": "auto",
    "hard_tabs": false,
    "tab_size": 4,
    "telemetry": {
        "diagnostics": true,
        "metrics": true
    },
    "auto_update": true,
    "terminal": {
        "shell": "system",
        "dock": "bottom",
        "default_height": 480,
        "max_scroll_history_lines": 100000
    },
    "languages": {
        "C": {
            "format_on_save": "on",
            "use_on_type_format": true,
            "prettier": {
                "allowed": false
            }
        },
        "C++": {
            "format_on_save": "on",
            "use_on_type_format": true,
            "prettier": {
                "allowed": false
            }
        },
        "Python": {
            "language_servers": ["pyright", "ruff"],
            "format_on_save": "on",
            "formatter": [
                {
                    "code_actions": {
                        "source.fixAll.ruff": true,
                        "source.organiseImports.ruff": true
                    }
                },
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ]
        }
    },
    "relative_line_numbers": false,
    "vim_mode": false,
    "vim": {
        "default_mode": "normal",
        "toggle_relative_line_numbers": true,
        "use_system_clipboard": "always",
        "use_multiline_find": false,
        "use_smartcase_find": false,
        "highlight_on_yank_duration": 200,
        "custom_digraphs": {}
    },
    "file_types": {
        "CMake": ["CMakeLists.txt"]
    },
    "auto_install_extensions": {
        "basher": true,
        "csv": true,
        "docker-compose": true,
        "dockerfile": true,
        "ini": true,
        "intellij-newui-theme": true,
        "make": true,
        "neocmake": true,
        "odin": true,
        "toml": true,
        "html": true,
        "zig": true,
        "ruff": true,
        "git-firefly": true
    },
    "lsp": {
        "pyright": {
            "settings": {
                "python.analysis": {
                    "diagnosticMode": "workspace",
                    "typeCheckingMode": "standard"
                },
                "python": {
                    "pythonPath": ".venv/Scripts/python;"
                }
            }
        }
    }
}
